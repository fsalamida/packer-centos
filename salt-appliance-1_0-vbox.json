{
    "builders": [
        {
            "boot_command": [
                "<esc>",
                "<wait>linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/salt-appliance-1_0.ks<enter>"
            ],
            "boot_wait": "5s",
            "disk_size": 40000,
            "guest_os_type": "RedHat_64",
            "headless": false,
            "http_directory": "./http_directory",
            "iso_checksum": "939fd1d87c11ffe7795324438b85adfb",
            "iso_checksum_type": "md5",
            "iso_url": "http://mi.mirror.garr.it/mirrors/CentOS/6.5/isos/x86_64/CentOS-6.5-x86_64-netinstall.iso",
            "ssh_password": "vagrant",
            "ssh_username": "root",
            "ssh_wait_timeout": "300m",
            "type": "virtualbox-iso",
            "vboxmanage": [
                ["modifyvm", "{{.Name}}", "--memory", "1024"],
                ["modifyvm", "{{.Name}}", "--cpus", "2"]
            ],
            "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
            "vm_name": "salt-appliance"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "provisioners/install-virtualbox-guest-additions.sh"
        },
        {
            "type": "shell",
            "script": "provisioners/bootstrap.sh",
            "execute_command":"{{ .Path }} -M  git v2014.1.0"
        },
        {
            "type": "shell",
            "script": "provisioners/setup-salt.sh"
        },
    	{
       	    "type": "shell",
            "inline": [ "sleep 10" ]
        },
        {
            "type": "shell",
            "script": "provisioners/clean-empty-space.sh"
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "salt-appliance-1_0-vbox.box"
        }
    ]
}

